@model IEnumerable<BookStore.Models.IventoryProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/InventoryManager/Views/Shared/_LayoutDashBroad.cshtml";
    int Index = 1;
}

@section css {
    <!-- page css -->
    <link href="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
}

<div class="page-container">

    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a class="breadcrumb-item" asp-action="Index" asp-controller="HomeInventory"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    <a class="breadcrumb-item" asp-action="Index" asp-controller="HomeInventory">Quản Lý Sản Phẩm</a>
                    <span class="breadcrumb-item active" href="#">Danh Sách Sản Phẩm</span>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row m-b-30">
                    <div class="col-lg-8">
                        <div class="d-md-flex">
                            <div class="m-b-10">
                                <select class="custom-select" style="min-width: 180px;">
                                    <option selected>Tất Cả</option>
                                    <option value="inStock">Còn Hàng</option>
                                    <option value="inStock">Sắp Hết</option>
                                    <option value="outOfStock">Hết Hàng</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-right">
                        <a asp-action="" asp-controller="">
                            <button class="btn btn-primary">
                                <i class="anticon anticon-plus-circle m-r-5"></i>
                                <span>Thêm Sản Phẩm</span>
                            </button>
                        </a>
                    </div>
                </div>
                <div class="table-responsive" style="overflow-x:unset">
                    <table class="table table-hover e-commerce-table" id="data-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Sách</th>
                                <th>Số lượng</th>
                                <th>Giá Đơn Hàng</th>
                                <th>Trạng thái</th>
                                <th>Ngày Nhập</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(Index++)
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img class="img-fluid rounded" src="@Url.Content("~/itemsImages/Images/" + item.MaSachNavigation.PictureThumb)" style="max-width: 60px" alt="">
                                            <h6 class="m-b-0 m-l-10">@item.MaSachNavigation.BookName</h6>
                                        </div>
                                    </td>
                                    <td class="d-flex align-items-center"><span class="badge badge-pill badge-primary">@item.SoLuongNhap</span></td>
                                    <td>@Cart.ConvertToVND((decimal)item.ThanhTien)</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (item.TrangThaiDuyet < 1)
                                            {
                                                <div class="badge badge-danger badge-dot m-r-10"></div>
                                                <div>Chưa Duyệt</div>
                                            }
                                            else
                                            {
                                                <div class="badge badge-success badge-dot m-r-10"></div>
                                                <div>Đã Duyệt</div>
                                            }
                                        </div>
                                    </td>
                                    <td>@item.NgayNhap</td>
                                    <td>
                                        <button type="button" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right btn-primary" data-toggle="modal" data-target="#exampleModal_@item.MaSach">
                                            <i class="anticon anticon-edit"></i>
                                        </button>
                                        @*  <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                    <a asp-controller="" asp-action="" asp-route-itemId="@item.MaSach"><i class="anticon anticon-profile"></i></a>
                                    </button>
                                    <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                    <a asp-controller="" asp-action="" asp-route-itemId="@item.MaSach"><i class="anticon anticon-edit"></i></a>
                                    </button> *@
                                    </td>
                                </tr>

                                <div class="modal fade" id="exampleModal_@item.MaSach">
                                    <partial name="NhapHangPartial" model="item" />
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="footer">
        <div class="footer-content">
            <p class="m-b-0">Copyright © 2019 Theme_Nate. All rights reserved.</p>
            <span>
                <a href="" class="text-gray m-r-15">Term &amp; Conditions</a>
                <a href="" class="text-gray">Privacy &amp; Policy</a>
            </span>
        </div>
    </footer>
    <!-- Footer END -->

</div>

@section Scripts {
    <!-- page js -->
    <!-- page js -->
    <script src="~/admin/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
    <script>
        $('#data-table').DataTable();
    </script>

}