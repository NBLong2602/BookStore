@model IEnumerable<BookStore.Models.IventoryProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBroad.cshtml";
    int Index = 1;
}

@section css {
    <!-- page css -->
    <link href="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
}

<div class="page-container">

    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a class="breadcrumb-item" asp-action="Index" asp-controller="HomeInventory"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    <a class="breadcrumb-item" asp-action="Index" asp-controller="HomeInventory">Quản Lý Tồn Kho</a>
                    <span class="breadcrumb-item active" href="#">Lịch Sử Nhập Hàng</span>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row m-b-30">
                    <div class="col-lg-8">
                        <div class="d-md-flex">
                            @* <div class="m-b-10">
                                <select class="custom-select" style="min-width: 180px;">
                                    <option selected>Tất Cả</option>
                                    <option value="inStock">Còn Hàng</option>
                                    <option value="inStock">Sắp Hết</option>
                                    <option value="outOfStock">Hết Hàng</option>
                                </select>
                            </div> *@
                        </div>
                    </div>
                    @* <div class="col-lg-4 text-right">
                        <a asp-action="AddOrder" asp-controller="Order" asp-area="InventoryManager">
                            <button class="btn btn-primary">
                                <i class="anticon anticon-plus-circle m-r-5"></i>
                                <span>Thêm Sản Phẩm</span>
                            </button>
                        </a>
                    </div> *@
                </div>
                <div class="table-responsive" style="overflow-x:unset">
                    <table class="table table-hover e-commerce-table" id="data-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th class="text-center">Tên Sách</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-center">Tổng giá trị</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center">Ngày Nhập</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(Index++)
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex align-items-center">
                                            <img class="img-fluid rounded" src="@Url.Content("~/itemsImages/Images/" + item.MaSachNavigation.PictureThumb)" style="max-width: 60px" alt="">
                                            <h6 class="m-b-0 m-l-10">@item.MaSachNavigation.BookName</h6>
                                        </div>
                                    </td>
                                    <td class="text-center"><span class="badge badge-pill badge-primary">@item.SoLuongNhap</span></td>
                                    <td class="text-center">@Cart.ConvertToVND((decimal)item.ThanhTien)</td>
                                    <td class="text-center">
                                        <div>
                                            @{
                                                var statusInfo = GetStatusInfo(item.TrangThaiDuyet);
                                            }

                                            <span class="@statusInfo.classString">@statusInfo.displayText</span>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.NgayNhap</td>
                                    <td class="text-center">
                                        <div class="dropdown dropdown-animated scale-left">
                                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                                Thao Tác
                                            </button>
                                            <div class="dropdown-menu">
                                                <div class="dropdown">
                                                    <button class="dropdown-item" type="button" data-toggle="modal" data-target="#Modal_@item.Id">
                                                        <i class="anticon anticon-delete" style="margin-right: 10px;"></i>Xem đơn
                                                    </button>
                                                    <a asp-area="Admin" asp-controller="InventoryManager" asp-action="AcceptOrder" asp-route-OrderId="@item.Id" class="dropdown-item">
                                                        <button class="dropdown-item" type="button">
                                                            <i class="anticon anticon-delete" style="margin-right: 10px;"></i>Duyệt đơn
                                                        </button>
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="InventoryManager" asp-action="RejectOrder" asp-route-OrderId="@item.Id" class="dropdown-item">
                                                        <button class="dropdown-item" type="button">
                                                            <i class="anticon anticon-delete" style="margin-right: 10px;"></i>Từ chối nhập
                                                        </button>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <div class="modal fade" id="Modal_@item.Id">
                                    <partial name="_PartialDetailInventory" model="item" />
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    <!-- Footer START -->
    <footer class="footer">
        <div class="footer-content">
            <p class="m-b-0">Copyright © 2019 Theme_Nate. All rights reserved.</p>
            <span>
                <a href="" class="text-gray m-r-15">Term &amp; Conditions</a>
                <a href="" class="text-gray">Privacy &amp; Policy</a>
            </span>
        </div>
    </footer>
    <!-- Footer END -->

</div>

@section Scripts {
    <!-- page js -->
    <!-- page js -->
    <script src="~/admin/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
    <script>
        $('#data-table').DataTable();
    </script>
}
@functions {
    public (string classString, string displayText) GetStatusInfo(int? trangThaiDuyet)
    {
        string classString;
        string displayText;

        switch (trangThaiDuyet)
        {
            case 0:
                classString = "badge badge-warning";
                displayText = "Chưa duyệt";
                break;
            case 1:
                classString = "badge badge-success";
                displayText = "Đã duyệt";
                break;
            case 3:
                classString = "badge badge-secondary";
                displayText = "Từ chối";
                break;
            default:
                classString = "badge badge-danger";
                displayText = "Đã Hủy";
                break;
        }

        return (classString, displayText);
    }
}