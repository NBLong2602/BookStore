@model IEnumerable<BookStore.Models.Customer>

@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBroad.cshtml";
}

<h1>CustomerList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerType.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="CustomerManager" asp-route-customerId="@item.Id">Edit</a> |
                    <a asp-action="CustomerDetail" asp-controller="CustomerManager" asp-route-customerId="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="CustomerManager" asp-route-customerId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
