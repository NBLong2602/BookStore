                                <label asp-for="Isbn">ISBN</label>
                                <input asp-for="Isbn" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="AuthorId">Author</label>
                                <input asp-for="Author.Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="PublisherId">Publisher</label>
                                <input asp-for="Publisher.Name" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="BookCategoryId">Book Category</label>
                                <input asp-for="BookCategory.Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="BookName">Book Name</label>
                                <input asp-for="BookName" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" class="form-control" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="PictureThumb">Picture Thumbnail</label>
                                <input asp-for="PictureThumb" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="PublishYear">Publish Year</label>
                                <input asp-for="PublishYear" class="form-control" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Language">Language</label>
                                <input asp-for="Language" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Status">Status</label>
                                <input asp-for="Status" class="form-control" />
