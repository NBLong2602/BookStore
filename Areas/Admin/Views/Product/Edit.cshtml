@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashBroad.cshtml";
}
@model BookStore.Models.Book

@section css {
    <link href="~/admin/assets/vendors/select2/select2.css" rel="stylesheet">
}
<div class="page-container">

    <!-- Content Wrapper START -->
    <div class="main-content">
        <form asp-area="Admin" asp-action="Edit" asp-controller="Product" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Isbn" />
            <div class="page-header no-gutters has-tab">
                <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                    <div class="media align-items-center m-b-15">
                        <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                            <img src="@Url.Content("~/ProductsImages/Images/" + Model.PictureThumb)" alt="">
                        </div>
                        <div class="m-l-15">
                            <h4 class="m-b-0">@Model.BookName</h4>
                            <p class="text-muted m-b-0">Product ID: #@Model.Isbn</p>
                        </div>
                    </div>
                    <div class="m-b-15">
                        <button class="btn btn-primary" type="submit">
                            <i class="anticon anticon-save"></i>
                            <span>Save</span>
                        </button>
                    </div>
                </div>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
                    </li>
                </ul>
            </div>
            <div class="tab-content m-t-15">
                <div class="tab-pane fade show active" id="product-edit-basic">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="BookName">Product Name</label>
                                <input type="text" class="form-control" asp-for="BookName" id="productName" placeholder="Product Name">
                                <span asp-validation-for="BookName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="Price">Price</label>
                                <input type="text" class="form-control" asp-for="Price" id="productPrice" placeholder="Price">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="BookCategoryId">Category</label>
                                <select class="custom-select" id="productCategory" asp-for="BookCategoryId" class="form-control" asp-items="ViewBag.BookCategoryId"></select>
                                <span asp-validation-for="BookCategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="AuthorId">Author</label>
                                <select class="custom-select" asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                                <span asp-validation-for="AuthorId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="Status">Trạng thái</label>
                                <select class="custom-select" asp-for="Status" id="productStatus">
                                    @if (Model.Status > 0)
                                    {
                                        <option value="1" selected>Đang bán</option>
                                        <option value="0">Chưa bán</option>
                                    }
                                    else
                                    {
                                        <option value="0" selected>Chưa bán</option>
                                        <option value="1">Đang bán</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="product-edit-option">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="Language">Ngôn ngữ</label>
                                <input type="text" class="form-control" asp-for="Language" id="Language">
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="PublisherId">Năm xuất bản</label>
                                <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.PublisherId"></select>
                                <span asp-validation-for="PublisherId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="TotalPage">Năm xuất bản</label>
                                <input type="text" class="form-control" asp-for="TotalPage" id="TotalPage">
                                <span asp-validation-for="TotalPage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="Discount">Giảm giá</label>
                                <input type="text" class="form-control" asp-for="Discount" id="Discount">
                            </div>
                            <div class="form-group">
                                <label class="font-weight-semibold" asp-for="Status">Tình trạng</label>
@*                                 <select class="custom-select" id="Status">
                                    <option value="columbia" selected>Columbia</option>
                                    <option value="brazil">Brazil</option>
                                    <option value="chile">Chile</option>
                                    <option value="argentina">Argentina</option>
                                </select> *@
                                <input asp-for="Status" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="product-edit-description">
                    <div class="card">
                        <div class="card-body">
                            <div id="productDescription">
                                <p>@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- Content Wrapper END -->
</div>
<hr />

