@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
    decimal totalPrice = 0;
    decimal itemPrice = 0;
    decimal feeShip = 0;
}
@model Cart
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            @if (Model?.lineCollection.Count > 0)
            {
                <table class="table table-bordered text-center mb-0">
                    <thead class="bg-secondary text-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.lineCollection)
                        {
                            <tr>
                                <td class="align-middle"><img src="/img/product-1.jpg" alt="" style="width: 50px;"> @item.Book.BookName</td>
                                <td class="align-middle">@item.Book.Price VND</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <a data-id="@item.Book.Isbn" class="ajax-reduce-to-cart btn btn-sm btn-primary btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@item.Quantity">
                                        <div class="input-group-btn">
                                            <a data-id="@item.Book.Isbn" class="ajax-add-to-cart btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">@(item.Book.Price * item.Quantity) VND</td>
                                <td class="align-middle"><a data-id="@item.Book.Isbn" class="ajax-remove-from-cart btn btn-sm btn-primary"><i class="fa fa-times"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.lineCollection.Count > 0)
                {
                    feeShip = 50000;
                    itemPrice = Model.ComputeTotalValue();
                    totalPrice = itemPrice + feeShip;
                }
                else
                {
                    feeShip = 0;
                    totalPrice = Model.ComputeTotalValue() + feeShip;
                }
            }
            else
            {
                <div class="container-fluid mb-5">
                    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
                        <h1 class="font-weight-semi-bold text-uppercase mb-3">Giỏ Hàng Của Bạn Đang Trống</h1>
                        <div class="input-group-append">
                            <a asp-controller="Product" asp-action="AllProduct" class="btn btn-primary">Đi Tới Trang Sản Phẩm</a>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">@itemPrice VND</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">@feeShip VND</h6>


                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">@totalPrice VND</h5>
                    </div>
                    <a asp-controller="Cart" asp-action="Checkout" class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(document).ready(function () {
            $(".ajax-remove-from-cart").click(function () {
                $.ajax({
                    url: "/Cart/RemoveFromCart",
                    data: {
                        productId: $(this).data("id"),
                        type: "ajax"
                    },
                    success: function (data) {
                        console.log(data);
                        Swal.fire({
                            icon: 'success',
                            title: 'Xóa sản phẩm thành công',
                            showConfirmButton: false,
                            timer: 2500
                        });
                        $("#cart_count").html(data.quantity);
                        window.location.href = '/Cart/Index';
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Xóa sản phẩm thất bại',
                            text: 'Vui lòng thử lại',
                            showConfirmButton: false,
                            timer: 2500
                        });
                    }
                });
            });
            $(".ajax-add-to-cart").click(function () {
                $.ajax({
                    url: "/Cart/AddToCart",
                    data: {
                        productId: $(this).data("id"),
                        quantity: 1,
                        type: "ajax"
                    },
                    success: function (data) {
                        console.log(data);
                        Swal.fire({
                            icon: 'success',
                            title: 'Thêm giỏ hàng thành công',
                            showConfirmButton: false,
                            timer: 2500
                        });
                        $("#cart_count").html(data.quantity);
                        window.location.href = '/Cart/Index';
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thêm giỏ hàng thất bại',
                            text: 'Vui lòng thử lại',
                            showConfirmButton: false,
                            timer: 2500
                        });
                    }
                });
            });
            $(".ajax-reduce-to-cart").click(function () {
                $.ajax({
                    url: "/Cart/ReduceToCart",
                    data: {
                        productId: $(this).data("id"),
                        quantity: 1,
                        type: "ajax"
                    },
                    success: function (data) {
                        console.log(data);
                        Swal.fire({
                            icon: 'success',
                            title: 'Giảm số lượng thành công',
                            showConfirmButton: false,
                            timer: 2500
                        });
                        $("#cart_count").html(data.quantity);
                        setTimeout = 2500;
                        window.location.href = '/Cart/Index';
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Giảm số lượng thất bại',
                            text: 'Vui lòng thử lại',
                            showConfirmButton: false,
                            timer: 2500
                        });
                    }
                });
            });
        });
    </script>
}