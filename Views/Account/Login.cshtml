@{
    ViewData["Title"] = "Login BookStore";
    Layout = "~/Views/Shared/_LayoutLog.cshtml";
}
@model Account
<div class="login-wrap p-4 p-md-5">
    <div class="d-flex">
        <div class="w-100">
            <h3 class="mb-4">Sign In</h3>
        </div>
        <div class="w-100">
            <p class="social-media d-flex justify-content-end">
                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
            </p>
        </div>
    </div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="form-group mb-3">
            @Html.TextBoxFor(x=>x.Username, new{@class="form-control",
        placeholder="Username", required="required",
        autofocus="autofocus"})
        </div>
        <div class="form-group mb-3">
            @Html.TextBoxFor(x=>x.Password, new{@class="form-control",
        placeholder="Password", type="password", required="required"})
        </div>
        <div class="form-group">
            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
        </div>
        <div class="form-group d-md-flex">
            <div class="w-50 text-left">
                <label class="checkbox-wrap checkbox-primary mb-0">
                    Remember Me
                    <input type="checkbox" checked>
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="w-50 text-md-right">
                <a href="#">Forgot Password</a>
            </div>
        </div>
    }
    <p class="text-center text-danger">@ViewBag.Message</p>
    <p class="text-center">Not a member? <a asp-action="Register" asp-controller="Account">Register</a></p>
    </div>

