@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLog.cshtml";
}
@model BookStore.ViewModel.CustomerAccountViewModel
<div class="login-wrap p-4 p-md-5">
    <div class="d-flex">
        <div class="w-100">
            <h3 class="mb-4">Register</h3>
        </div>
        <div class="w-100">
            <p class="social-media d-flex justify-content-end">
                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
            </p>
        </div>
    </div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="form-group mb-3">
            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", placeholder = "FullName", type = "text", required = "required", autofocus = "autofocus" })
        </div>
        <div class="form-group mb-3">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "UserName", type = "text", required = "required", autofocus = "autofocus" })
        </div>
        <div class="form-group mb-3">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required", autofocus = "autofocus" })
        </div>
        <div class="form-group mb-3">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Phone", type = "tel", required = "required", autofocus = "autofocus", pattern = "0\\d{9}", title = "Vui lòng nhập đúng định dạng số điện thoại" })
        </div>
        <div class="form-group mb-3">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Password", type = "password", required = "required", autofocus = "autofocus" })
        </div>
        //btn
        <div class="form-group">
            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Register</button>
        </div>
    }
    <p class="text-center text-danger">@ViewBag.Message</p>
    <p class="text-center">Are you member? <a asp-action="Login" asp-controller="Account">Login</a></p>
</div>


