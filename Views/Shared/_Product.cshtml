@model BookStore.Models.Book
@{
    decimal Price = (decimal)Model.Price;
}
<div class="col-lg-3 col-md-6 col-sm-12 pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" style="height: 350px;">
            <!-- Set a fixed height -->
            <img class="img-fluid w-100" src="@Url.Content("../ProductsImages/Images/" + Model.PictureThumb)" alt="Thumbnail">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@Model.BookName</h6>
            <div class="d-flex justify-content-center">
                <h6>@Cart.ConvertToVND(Price)</h6><h6 class="text-muted ml-2"></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@Model.Isbn" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
            <a data-id="@Model.Isbn" class="ajax-add-to-cart btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
        </div>
    </div>

</div>
